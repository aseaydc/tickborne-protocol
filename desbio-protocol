        function generateDesBioPhase2(markers) {
            const hasLyme = markers.lyme.length > 0 || markers.tbrf.length > 0;
            const hasBabesia = markers.coinfections1.some(m => m.includes('Babesia'));
            const hasBartonella = markers.coinfections1.some(m => m.includes('Bartonella'));
            const hasAnaplasma = markers.coinfections1.some(m => m.includes('Anaplasma'));
            const hasEhrlichia = markers.coinfections1.some(m => m.includes('Ehrlichia'));
            const hasMycoplasma = markers.coinfections2.some(m => m.includes('Mycoplasma'));
            const hasRickettsia = markers.coinfections2.some(m => m.includes('Rickettsia'));
            const hasViralCoinfections = markers.coinfections2.some(m => m.includes('Virus') || m.includes('Coxsackie'));
            const hasEBV = markers.opportunistic.some(m => m.includes('Epstein Barr'));
            const hasCMV = markers.opportunistic.some(m => m.includes('Cytomegalovirus'));
            const hasHHV = markers.opportunistic.some(m => m.includes('HHV'));
            const hasHSV = markers.opportunistic.some(m => m.includes('HSV'));
            const hasToxoplasma = markers.opportunistic.some(m => m.includes('Toxoplasma'));
            const hasStrep = markers.opportunistic.some(m => m.includes('Streptococcal'));
            const hasChlamydia = markers.coinfections2.some(m => m.includes('Chlamydophila'));

            let html = `
                <div class="phase">
