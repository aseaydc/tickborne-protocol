        function resetForm() {
            if (confirm('Are you sure you want to reset the form? All selections and patient information will be cleared.')) {
                document.getElementById('patientName').value = '';
                document.getElementById('patientDOB').value = '';
                document.getElementById('testDate').value = '';
                document.getElementById('providerName').value = '';
                
                document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                    checkbox.checked = false;
                    checkbox.closest('.marker-item').classList.remove('detected');
                });

                document.getElementById('protocolOutput').classList.remove('show');
                document.getElementById('buttonGroup').style.display = 'none';
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            populateMarkers();
        });
    </script>
</body>
</html>
