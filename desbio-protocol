        function populateMarkers() {
            Object.keys(markers).forEach(category => {
                const grid = document.getElementById(`${category}-grid`);
                markers[category].forEach(marker => {
                    const div = document.createElement('div');
                    div.className = 'marker-item';
                    div.innerHTML = `
                        <label>
                            <input type="checkbox" value="${marker}" onchange="toggleMarkerHighlight(this)">
                            ${marker}
                        </label>
                    `;
                    grid.appendChild(div);
                });
            });
        }

        function toggleMarkerHighlight(checkbox) {
            const markerItem = checkbox.closest('.marker-item');
            if (checkbox.checked) {
                markerItem.classList.add('detected');
            } else {
                markerItem.classList.remove('detected');
            }
        }

        function toggleCategory(categoryName) {
            const content = document.getElementById(`content-${categoryName}`);
            const icon = document.getElementById(`toggle-${categoryName}`);
            
            content.classList.toggle('collapsed');
            icon.classList.toggle('rotated');
        }

        function generateProtocol() {
            const patientName = document.getElementById('patientName').value;
            const patientDOB = document.getElementById('patientDOB').value;
            const testDate = document.getElementById('testDate').value;
            const providerName = document.getElementById('providerName').value;

            const selectedMarkers = {
                lyme: [],
                tbrf: [],
                coinfections1: [],
                coinfections2: [],
                opportunistic: []
            };

            Object.keys(selectedMarkers).forEach(category => {
                document.querySelectorAll(`#${category}-grid input:checked`).forEach(checkbox => {
                    selectedMarkers[category].push(checkbox.value);
                });
            });

            const hasSelections = Object.values(selectedMarkers).some(arr => arr.length > 0);
            if (!hasSelections) {
                alert('Please select at least one marker to generate a protocol.');
                return;
            }

            let protocolHTML = `
                <h2>üíä Personalized Tickborne Disease Protocol - DesBio</h2>
                
                <div class="patient-summary">
                    <h3>Patient Information</h3>
                    <p><strong>Patient:</strong> ${patientName || 'Not provided'}</p>
                    <p><strong>Date of Birth:</strong> ${patientDOB || 'Not provided'}</p>
                    <p><strong>Test Date:</strong> ${testDate || 'Not provided'}</p>
                    <p><strong>Provider:</strong> ${providerName || 'Not provided'}</p>
